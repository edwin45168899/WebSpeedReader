{
  "manifest_version": 3,
  "name": "網頁快速閱讀助手",
  "version": "1.0.0.17",
  "description": "幫助用戶快速總結和閱讀網頁內容",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "commands"
  ],
  "commands": {
    "summarize-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "總結當前頁面"
    },
    "summarize-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+A"
      },
      "description": "總結選取的內容"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "readability.js",
        "content.js"
      ]
    }
  ]
}